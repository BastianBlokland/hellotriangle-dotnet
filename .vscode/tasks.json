{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build-macos",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/platforms/ht.macos/ht.macos.csproj"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "run-macos",
            "command": "dotnet",
            "type": "process",
            "args": [
                "run",
                "--project",
                "${workspaceFolder}/platforms/ht.macos/ht.macos.csproj"
            ],
            "problemMatcher": "$msCompile",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "build-win32",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/platforms/ht.win32/ht.win32.csproj"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "run-win32",
            "command": "dotnet",
            "type": "process",
            "args": [
                "run",
                "--project",
                "${workspaceFolder}/platforms/ht.win32/ht.win32.csproj"
            ],
            "problemMatcher": "$msCompile"
        }
    ]
}